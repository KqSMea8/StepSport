<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <include layout="@layout/title_list" />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_below="@id/title"
            android:background="@drawable/rc_list_divider" />

        <TextView
            android:id="@+id/detail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Shop Detail"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="ListData"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/muti_select_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listData"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Muti_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/muti_select_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="Go Settings"
            android:textColor="#0A84BD"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <com.example.view.ExpandableView
            android:id="@+id/launcher_expand_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>